<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kencloud.workchat.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ken_chat_logo"
            android:layout_marginTop="74dp"
            android:layout_gravity="center"
            android:layout_weight="0.12" />
    </LinearLayout>

    <EditText
        android:id="@+id/editPhNo"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Mobile Number"
        android:inputType="phone"
        android:maxLength="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <Button
android:textColor="@color/white"
        android:text="Submit"
        android:id="@+id/btnSubmit"
        android:background="@drawable/bg_button_rounded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPhNo"
        android:layout_marginTop="74dp"
        android:layout_alignRight="@+id/editPhNo"
        android:layout_alignEnd="@+id/editPhNo"
        android:layout_alignLeft="@+id/editPhNo"
        android:layout_alignStart="@+id/editPhNo" />

</RelativeLayout>
